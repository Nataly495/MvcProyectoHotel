@model IEnumerable<mvcProyectoHotel.Models.Habitacion>

@{
    ViewData["Title"] = "Lista de Habitaciones";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Habitaciones</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nuevo Habitacion</a>
        </div>
    </div>
    <br />
    <div class="row">
        @foreach (var habitacion in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="@Url.Content(habitacion.UrlImagen)" class="card-img-top" alt="Imagen de la Habitacion" style="width: 100%; height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@habitacion.Nombre</h5>
                        <p class="card-text">@habitacion.Descripcion</p>
                        <p class="card-text"><small class="text-muted">Estado: @habitacion.Estado</small></p>
                        <a asp-action="Edit" asp-route-id="@habitacion.Id" class="btn btn-primary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@habitacion.Id" class="btn btn-danger">Borrar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


